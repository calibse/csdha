#! /bin/sh

touch lock

set -e

dir=/root/csdha

git clone https://github.com/calibse/csdha.git ${dir}
cp -r ${dir}/. .
rm -rf ${dir}
mkdir ${dir}
cp /root/.env* .
cp .env.production .env
composer install --optimize-autoloader --prefer-dist --no-dev --no-progress \
	-n && composer clear-cache
php artisan storage:link --silent
chmod 666 public/favicon.ico
container/bin/check_db_conn
container/bin/deploy
rm lock
container/bin/sync_assets

