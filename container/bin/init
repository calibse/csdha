#! /bin/sh

touch lock

set -e

dir=/root/csdha

git clone https://github.com/calibse/csdha.git ${dir}
cp -r ${dir}/. .
rm -rf ${dir}
mkdir ${dir}
cp /root/.env* .
cp .env.production .env
cp -r storage/. /root/user_storage
cp -r storage/. /root/admin_storage
cp -r bootstrap/cache/. /root/user_cache
cp -r bootstrap/cache/. /root/admin_cache
composer install --optimize-autoloader --prefer-dist --no-dev --no-progress \
	-n && composer clear-cache
php artisan migrate --force
php artisan db:audit-triggers
rm lock

